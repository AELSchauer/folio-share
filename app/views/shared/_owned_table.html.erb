<table class="responsive-table bordered highlight">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>File Size</th>
      <th>File Type</th>
      <th>Share</th>
      <th colspan=2>Privacy Status</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% current_folder.children.each do |child| %>
        <td>
          <% if child.class == Folder %>
            <i class="material-icons">work</i>
          <% else %>
            <i class="material-icons">description</i>
          <% end %>
        </td>
        <td>
          <%= link_to child.name, folder_or_upload_path(child) %>
        </td>
        <td>
          <%= child.size %>
        </td>
        <td>
          <%= child.content_type %>
        </td>
        <td>
          <% if child.class == Folder %>
            <%= link_to "Share Folder", folder_share_path(child) %>
          <% end %>
        </td>
        <td><%= child.display_privacy %></td>
        <td>
          <% if child.parent_is_private? %>
            <%= link_to "Make #{child.opposite_privacy}", folder_or_upload_path(child), method: :put %>
          <% end %>
        </td>
        <td>
          <%= link_to "Delete", folder_or_upload_path(child), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
