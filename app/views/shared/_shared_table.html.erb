<div class="shared-table">
  <br/><hr>

  <h5>Folios Shared With Me</h5>
  <table class="responsive-table bordered highlight">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Owner</th>
      </tr>
    </thead>

    <tbody>
        <% current_user.shared_on.each do |folder| %>
        <tr>
          <td><i class="material-icons">folder</i></td>
          <td><%= link_to folder.name, folder_path(folder) %></td>
          <td><%= folder.owner.username %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
