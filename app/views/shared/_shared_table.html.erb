<div class="shared-table">
  <br/>

  <h5>Folios Shared With Me</h5>
  <table class="responsive-table bordered highlight">
    <thead>
      <tr>
        <th class="table_header_center"></th>
        <th class="table_header_center">Name</th>
        <th class="table_header_center">Owner</th>
      </tr>
    </thead>

    <tbody>
        <% current_user.shared_on.each do |folder| %>
        <tr>
          <td class="table_data_center"><i class="material-icons">folder_shared</i></td>
          <td class="table_data_center"><%= link_to folder.name, folder_path(folder) %></td>
          <td class="table_data_center"><%= folder.owner.username %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
