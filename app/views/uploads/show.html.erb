<h3><%= @upload.folder.name %>'s <%= @upload.name %></h3>
<div class="file_content">
<table>
  <tr>
    <th>File Size:</th>
    <td><%= number_to_human_size(@upload.size) %></td>
  </tr>
  <tr>
    <th>File Type:</th>
    <td><%= @upload.content_type %></td>
  </tr>
</table>
<p><%= link_to "Download", upload_download_path(@upload), class: "btn" %> <% if current_user == @upload.owner %>
      <%= link_to "Delete File", upload_path(@upload), method: :delete, class: "btn"%></p>
</div>

<%= render partial: "shared/comments_section" %>
