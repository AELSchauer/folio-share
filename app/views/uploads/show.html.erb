<h1>Uploads#show</h1>

<p><%= @upload.name %></p>

<p><%= @upload.size %></p>

<p><%= @upload.content_type %></p>

<p><%= link_to "Download", upload_download_path(@upload), class: "btn" %></p>

<%= render partial: "comments/form" %>

<div class="comments">
  <h3>Comments (<%= @upload.comments.size %>)</h3>
  <% @upload.comments.each do |comment| %>
    <%= comment.content %>
  </br>
  <% end %>
</div>
